{
  "name": "cmdmdl",
  "version": "1.0.0",
  "description": "Custom Camunda Modeler",
  "scripts": {
    "build": "run-s client:build \"build:distro -- {@}\" --",
    "build:distro": "node node_modules/camunda-modeler/tasks/distro.js",
    "client:build": "(cd node_modules/camunda-modeler/client && npm run build)",
    "postinstall": "electron-builder install-app-deps && lerna bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mtharra/cmdmdl.git"
  },
  "author": "Marco Tharra - CGS mbH",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mtharra/cmdmdl/issues"
  },
  "homepage": "https://github.com/mtharra/cmdmdl#readme",
  "dependencies": {
    "camunda-modeler": "^1.2.1"
  },
  "devDependencies": {
    "archiver": "^3.0.3",
    "builder-util": "^22.3.3",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-notarize": "^1.0.0",
    "electron-packager": "^15.3.0",
    "electron-publisher-s3": "^20.17.2",
    "electron-reloader": "^1.2.0",
    "lerna": "^3.22.1",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5"
  }
}
